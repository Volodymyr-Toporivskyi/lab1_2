@{
    ViewBag.Title = "Home Page";
}

<script type="text/javascript">
     function con()
        {
         if (document.getElementById("firstNum").value == "" || document.getElementById("secondNum").value == "")
            {
                alert("Усі поля не заповнені");
         }
        }
</script>
@model lab1_2.Models.Calculator
@using (Html.BeginForm("Index", "Home", FormMethod.Post))
{
    <br />
    @Html.EditorFor(m => m.firstNum)
    <br /><br />
        <br />
        @Html.EditorFor(m => m.secondNum)
        <br /><br />
        <br />
        @Html.DisplayFor(m => m.result)
        <br /><br />
        <input type="submit" name="calc" onclick="con()" value="Add" />
        <input type="submit" name="calc" onclick="con()" value="Sub" />
        <input type="submit" name="calc" onclick="con()" value="Mult" />
        <input type="submit" name="calc" onclick="con()" value="Div" />
}